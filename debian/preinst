#!/bin/sh
# preinst script
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <new-preinst> `install'
#        * <new-preinst> `install' <old-version>
#        * <new-preinst> `upgrade' <old-version>
#        * <old-preinst> `abort-upgrade' <new-version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package

__php_install_ppa_exists() {
    sudo grep -r "deb http://ppa.launchpad.net/ondrej/php/ubuntu" /etc/apt/sources.list /etc/apt/sources.list.d/*.list >/dev/null 2>&1 && echo 0 || echo 1
}

__php_install_ppa() {
    [[ $(__php_install_ppa_exists) -eq 0 ]] && return

    command -v add-apt-repository >/dev/null 2>&1 && (
        sudo add-apt-repository ppa:ondrej/php -y
    ) || (
        cat <<EOF | sudo tee /etc/apt/sources.list.d/ondrej-ubuntu-php-focal.list >/dev/null &&
deb http://ppa.launchpad.net/ondrej/php/ubuntu focal main
# deb-src http://ppa.launchpad.net/ondrej/php/ubuntu focal main
EOF
            sudo apt-key adv --keyserver keyserver.ubuntu.com --recv-keys 4F4EA0AAE5267A6C
    )
}

case "$1" in
install | upgrade)
    __php_install_ppa

    [ -f /usr/lib/systemd/system/ductnd.service ] && sudo systemctl stop ductnd
    [ -f /usr/lib/systemd/system/ductn-iptables.service ] && sudo systemctl stop ductn-iptables
    ;;

abort-upgrade) ;;

*)
    echo "preinst called with unknown argument \`$1'" >&2
    exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
