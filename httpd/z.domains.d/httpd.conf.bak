########################################################################
# domain: all www to non-www
########################################################################
<VirtualHost *:80>
    UseCanonicalName Off
    ServerAlias www.*
    VirtualDocumentRoot /var/www/html/live/%2+/
</VirtualHost>

<VirtualHost *:443>
    UseCanonicalName Off
    ServerAlias www.*
    VirtualDocumentRoot /var/www/html/live/%2+/

    SSLEngine on
    SSLProtocol all -SSLv2 -SSLv3

    SSLCipherSuite ALL:!ADH:!EXPORT56:RC4+RSA:+HIGH:+MEDIUM:+LOW:+SSLv2:+EXP

    SSLCertificateFile /var/www/base/httpd/local/certificate.crt
    SSLCertificateKeyFile /var/www/base/httpd/local/private.key
</VirtualHost>

########################################################################
# domain: all
########################################################################
<VirtualHost *:80>
    UseCanonicalName Off
    ServerAlias *
    VirtualDocumentRoot /var/www/html/live/%0/
</VirtualHost>

<VirtualHost *:443>
    UseCanonicalName Off
    ServerAlias *
    VirtualDocumentRoot /var/www/html/live/%0/

    SSLEngine on
    SSLProtocol all -SSLv2 -SSLv3

    SSLCipherSuite ALL:!ADH:!EXPORT56:RC4+RSA:+HIGH:+MEDIUM:+LOW:+SSLv2:+EXP

    SSLCertificateFile /var/www/base/httpd/local/certificate.crt
    SSLCertificateKeyFile /var/www/base/httpd/local/private.key
</VirtualHost>
