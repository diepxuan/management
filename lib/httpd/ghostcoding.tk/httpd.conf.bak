<VirtualHost *:80>
    UseCanonicalName Off
    ServerAlias ghostcoding.tk
    ServerAlias www.ghostcoding.tk
    VirtualDocumentRoot /home/ductn/public_html/live/www.ghostcoding.tk/

    RewriteEngine On
    RewriteCond %{HTTPS} !=on
    RewriteRule ^/?(.*) https://%{SERVER_NAME}/$1 [R,L]
</VirtualHost>

<VirtualHost *:443>
    UseCanonicalName Off
    ServerAlias ghostcoding.tk
    ServerAlias www.ghostcoding.tk
    VirtualDocumentRoot /home/ductn/public_html/live/www.ghostcoding.tk/

    SSLEngine on
    SSLProtocol all -SSLv2 -SSLv3

    SSLCipherSuite ALL:!ADH:!EXPORT56:RC4+RSA:+HIGH:+MEDIUM:+LOW:+SSLv2:+EXP

    SSLCertificateFile /var/www/base/httpd/ghostcoding.tk/certificate.crt
    SSLCertificateKeyFile /var/www/base/httpd/ghostcoding.tk/private.key
    SSLCACertificateFile /var/www/base/httpd/ghostcoding.tk/ca_bundle.crt
</VirtualHost>
