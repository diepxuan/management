<VirtualHost *:80>
    UseCanonicalName Off
    ServerAlias *.vpn.diepxuan.com
    ServerAlias *.vpn.diepxuan.*
    VirtualDocumentRoot /home/vpn/public_html/

    ProxyPass / ws://127.0.0.1:10080/
    ProxyAddHeaders Off
    ProxyPreserveHost On
    RequestHeader set Host %{HTTP_HOST}s
    RequestHeader set X-Forwarded-For %{REMOTE_ADDR}s


    RewriteEngine On
    RewriteCond %{HTTP:Upgrade} websocket [NC]
    RewriteCond %{HTTP:Connection} upgrade [NC]
    RewriteRule ^/?(.*) ws://127.0.0.1:10080/$1 [P,L]

    ProxyPass / ws://127.0.0.1:10080/
    ProxyPassReverse / ws://127.0.0.1:10080/
 
    ProxyAddHeaders Off
    ProxyPreserveHost On
    RequestHeader append X-Forwarded-For %{REMOTE_ADDR}s
</VirtualHost>

<VirtualHost *:443>
    UseCanonicalName Off
    ServerAlias *.vpn.diepxuan.com
    ServerAlias *.vpn.diepxuan.*
    VirtualDocumentRoot /home/vpn/public_html/

    SSLEngine on
    SSLProtocol all -SSLv2 -SSLv3

    SSLCipherSuite ALL:!ADH:!EXPORT56:RC4+RSA:+HIGH:+MEDIUM:+LOW:+SSLv2:+EXP

    SSLCertificateFile      /etc/letsencrypt/live/vpn.diepxuan.com/fullchain.pem
    SSLCertificateKeyFile   /etc/letsencrypt/live/vpn.diepxuan.com/privkey.pem

    RewriteCond %{HTTP:Upgrade} websocket [NC]
    RewriteCond %{HTTP:Connection} upgrade [NC]
    RewriteRule ^/?(.*) ws://127.0.0.1:10080/$1 [P,L]

    ProxyPass / ws://127.0.0.1:10080/
    ProxyPassReverse / ws://127.0.0.1:10080/
    
    ProxyAddHeaders Off
    ProxyPreserveHost On
    RequestHeader append X-Forwarded-For %{REMOTE_ADDR}s

